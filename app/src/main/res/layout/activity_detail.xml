<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.teamnexters.mosaic.ui.detail.DetailViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailActivity"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/content_scrollview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/write_reply_layout"
            android:fillViewport="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/top_layout"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/close_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="13dp"
                        app:srcCompat="@drawable/ic_close"/>

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/user_info_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/university_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toLeftOf="@+id/user_info_seperate_line"
                            android:textAppearance="@style/B12"
                            android:textColor="#fd553b"
                            android:text="서강대확교"/>

                        <View
                            android:id="@+id/user_info_seperate_line"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toRightOf="@+id/university_name"
                            app:layout_constraintRight_toLeftOf="@+id/user_id"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="#c6c6c6"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/user_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="@+id/user_info_seperate_line"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:textAppearance="@style/B12"
                            android:textColor="#919599"
                            android:text="이건준입니다!"/>
                    </android.support.constraint.ConstraintLayout>

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/scrap_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginRight="13dp"
                        app:srcCompat="@drawable/ic_scrap_pr"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/image_view_pager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top_layout"
                    android:layout_marginTop="24dp"
                    android:visibility="gone"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="9dp"
                    app:layout_constraintLeft_toLeftOf="@+id/content_title"
                    app:layout_constraintRight_toRightOf="@+id/content_title"
                    app:layout_constraintBottom_toBottomOf="@+id/content_title"
                    android:background="#ccf6ff"/>

                <com.teamnexters.mosaic.ui.widget.CustomTextView
                    android:id="@+id/content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_view_pager"
                    android:layout_marginTop="24dp"
                    app:layout_goneMarginTop="32dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="이건준이 짱입니당🏆"
                    android:textAppearance="@style/EB16Black"/>

                <com.teamnexters.mosaic.ui.widget.CustomTextView
                    android:id="@+id/content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="32dp"
                    android:paddingRight="32dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="38dp"
                    android:gravity="center_horizontal"
                    android:letterSpacing="-0.03"
                    android:lineSpacingExtra="8sp"
                    app:layout_constraintTop_toBottomOf="@+id/content_title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/bottom_layout"
                    android:textAppearance="@style/R16Black"
                    android:text="올해 하반기에 열리는 전국 비보이
댄스대회에 함께 할 팀원을 구합니다. 올해로
4회째 수상하고 있습니다. 체계적인 연습과
끈끈한 팀워크로 대학 동안 즐거운 추억을
만드실 여러분들의 연락 기다립니다.
올해도 수상 가즈아" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/bottom_layout"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/content"
                    app:layout_constraintBottom_toTopOf="@+id/reply_recyclerview">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#dbdbdb"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/write_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginRight="20dp"
                        android:textAppearance="@style/B11"
                        android:textColor="#999999"
                        android:letterSpacing="-0.04"
                        android:text="오후 3시 20분"/>


                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/reply_count_prefix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="20dp"
                        android:textAppearance="@style/B11"
                        android:textColor="#999999"
                        android:letterSpacing="-0.04"
                        android:text="@string/reply"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/reply_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintLeft_toRightOf="@+id/reply_count_prefix"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="2dp"
                        android:textAppearance="@style/B11"
                        android:textColor="#fd553b"
                        android:letterSpacing="-0.04"
                        android:text="24"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:background="#dbdbdb"/>
                </android.support.constraint.ConstraintLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/reply_recyclerview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/bottom_layout"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v4.widget.NestedScrollView>
        
        <android.support.constraint.ConstraintLayout
            android:id="@+id/write_reply_layout"
            android:layout_width="0dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_scrollview">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#dbdbdb"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/add_reply_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="9dp"
                app:srcCompat="@drawable/fill_1"/>

            <View
                android:id="@+id/write_reply_seperate_line"
                android:layout_width="1dp"
                android:layout_height="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/add_reply_image"
                android:layout_marginLeft="9dp"
                android:background="#ebebeb"/>

            <EditText
                android:id="@+id/write_reply_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/write_reply"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:textColorHint="#abafb4"
                android:letterSpacing="-0.03"
                android:lineSpacingExtra="6sp"
                android:textAppearance="@style/R12Black"
                android:background="@null"
                app:layout_constraintLeft_toRightOf="@+id/write_reply_seperate_line"
                app:layout_constraintRight_toLeftOf="@+id/send_reply"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/send_reply"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="13dp"
                app:srcCompat="@drawable/ic_send_pr"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</layout>

