    <style name="B10Black" parent="B10">
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="B10Grey" parent="B10">
        <item name="android:textColor">@color/textColorGrey</item>
    </style>

    <style name="B10MiddleGrey" parent="B10">
        <item name="android:textColor">@color/textColorMiddleGrey</item>
    </style>

    <style name="B10LightGrey" parent="B10">
        <item name="android:textColor">@color/textColorLightGrey</item>
    </style>

    <style name="B10White" parent="B13">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="B10Commented" parent="B10">
