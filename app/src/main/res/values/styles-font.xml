<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppFont" parent="TextAppearance.AppCompat" />

    <!-- regular -->
    <style name="AppFont.R">
        <item name="android:fontFamily">@font/nanum_square_regular</item>
    </style>

    <style name="R13" parent="AppFont.R">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="R16" parent="AppFont.R">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="R18" parent="AppFont.R">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="R13Black" parent="R13">
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="R16Black" parent="R16">
        <item name="android:textColor">@color/textColorBlack</item>
    </style>

    <style name="R18LightRed" parent="AppFont.R">
        <item name="android:textColor">@color/textColorLightRed</item>
    </style>


